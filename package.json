{
  "name": "bamboosword-fe-studybook",
  "version": "1.0.0",
  "description": "> 学习打卡记录",
  "main": "index.js",
  "scripts": {
    "test": "echo \"hello world\"",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz",
    "prepare": "husky install",
    "build:comment": "构建",
    "build": "npm run eslint && npm run prettier && rm -rf lib && tsc --build"
  },
  "bin": {
    "ts-cli": "./bin/ts-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BambooSword/BambooSword-FE-studybook.git"
  },
  "author": "BambooSword",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BambooSword/BambooSword-FE-studybook/issues"
  },
  "homepage": "https://github.com/BambooSword/BambooSword-FE-studybook#readme",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.2.4",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/inquirer": "^8.1.3",
    "@types/shelljs": "^0.8.9",
    "chalk": "^5.0.0",
    "commander": "^8.3.0",
    "inquirer": "^8.2.0",
    "shelljs": "^0.8.4"
  }
}
